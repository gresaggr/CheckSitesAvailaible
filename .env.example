# Application
APP_NAME=Website Monitor
DEBUG=False
LOG_LEVEL=INFO

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=website_monitor
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Security
SECRET_KEY=your_very_long_random_secret_key_here_at_least_32_characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8080"]

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Telegram Bot (optional)
# Create bot via @BotFather and get token
TELEGRAM_BOT_TOKEN=

# Monitoring settings
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/141.0.0.0 Safari/537.36
DEFAULT_CHECK_INTERVAL=300
DEFAULT_TIMEOUT=30
MAX_CONCURRENT_CHECKS=100